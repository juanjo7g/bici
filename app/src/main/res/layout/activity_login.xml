<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:orientation="vertical"
    android:background="@mipmap/background_bicicare"
    >

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_logo_bicicare"
        android:id="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_height="100dp" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/l_usuario"
        android:inputType="text"
        android:background="@drawable/borde_redondo"
        android:drawableLeft="@mipmap/ic_usuario"
        android:layout_below="@id/imageView5"
        android:hint="Usuario"
        android:layout_height="40dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/l_contraseña"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:background="@drawable/borde_redondo"
        android:drawableLeft="@mipmap/ic_pass"
        android:layout_below="@+id/l_usuario"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/ingresar"
        android:text="Iniciar Sesión"
        android:layout_marginTop="15dp"
        android:background="@drawable/borde_redondo_verde"
        android:layout_below="@+id/l_contraseña"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ayuda"
        android:text="Obtén ayuda"
        android:clickable="true"
        android:autoLink="web"
        android:textStyle="bold"
        android:layout_below="@+id/ingresar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:text="¿Olvidaste tus datos de sesión?"
        android:layout_alignBaseline="@+id/ayuda"
        android:layout_alignBottom="@+id/ayuda"
        android:layout_toStartOf="@+id/ayuda" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/login_google"
        android:text="Inicia Sesión con Google"
        android:background="@drawable/borde_redondo"
        android:drawableLeft="@mipmap/ic_google"
        android:layout_below="@+id/login_facebook"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info2"
        android:text="¿No tienes cuenta?"
        android:layout_below="@+id/login_google"
        android:layout_alignStart="@+id/ingresar"
        android:layout_marginTop="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registro"
        android:text="Regístrate"
        android:clickable="true"
        android:autoLink="web"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/info2"
        android:layout_alignBottom="@+id/info2"
        android:layout_alignEnd="@+id/ingresar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/login_facebook"
        android:text="Inicia Sesión con Facebook"
        android:background="@drawable/borde_redondo"
        android:drawableLeft="@mipmap/ic_facebook"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ayuda"
        android:layout_alignParentStart="true" />

    <!--
       <com.facebook.login.widget.LoginButton
           android:id="@+id/login_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
    -->
</RelativeLayout>